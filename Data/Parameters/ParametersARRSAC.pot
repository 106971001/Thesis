###############################################################################
# Parameters for Average Reward Risk Sensitive Actor-Critic algorithm for the #
# asset allocation problem                                                    #
###############################################################################

###############
# Directories #
###############

# Input filepath (relative to Thesis/Code/Thesis/examples/ directory) 
inputDataPath=../../../Data/Input/daily_returns.csv

# Output filepath (relative to Thesis/Code/Thesis/examples/ directory)
outputDataPath=../../../Data/Output/

# Debug filepath (relative to Thesis/Code/Thesis/examples/ directory)
debugDataPath=../../../Data/Debug/

##########
# Market #
##########

# Risk-free rate
riskFreeRate=0.0

#########################
# Asset allocation task #
#########################

# Proportional transaction costs
deltaP=0.000

# Fixed transaction costs
deltaF=0.0

# Short-selling fees
deltaS=0.000

# Number of past days observed by the agent
numDaysObserved=10

################
# ARRSAC agent #
################

# Maximum variance for mean variance problem
maxVar=0.04

# Actor learning rate
alphaActor=0.05

# Critic learning rate
alphaCritic=0.1

# Baselines learning rate 
alphaBaseline=0.2

# Lagrange multiplier learning rate
alphaLagrange=0.001

##############
# Experiment #
##############

# Number of experiments
numExperiments=5

# Number of epochs
numEpochs=2000

# Number of training steps
numTrainingSteps=1000

# Number of test steps
numTestSteps=500
